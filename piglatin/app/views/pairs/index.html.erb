<div class="container">
	<div class="title-text">
		<p>Professor of</p><p>Pig Latin</p>
	</div>
	<div class="main-image">
			<%= image_tag("RoyalPigReads.jpg")%>
	</div>
	<div class="form">
		<%= form_for @pair do |f| %>
		<%= f.label "English to Pig Latin" %>
		<%= f.text_field :english %>
		<%= f.label "Pig Latin to English" %>
		<%= f.text_field :pig_latin %>
		<%= f.submit "Translate, please!" %>
		<% end %>
	</div>

	<div id="translations">
		
	</div>
	<div id="key_entry">
		<p>Enter the key in here, my friend, for translations you'd like to see again!</p>
		<%= form_tag('/pairs', :id => "key_search") do %>
		<%= text_field_tag :search, params[:search]	%>
		<%= submit_tag "What was that pair again?" %>
		<% end %>
	</div>
	
</div>